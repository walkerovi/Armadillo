@model IEnumerable<Armadillo.Models.Programa>

@{
    ViewData["Title"] = "Programas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        Programas
    </div>
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-primary">Nuevo Programa</a>
        </p>

        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-sm-3">
                    <div class="card">
                        <div class="card-header">

                            <div class="row">
                                <div class="col-sm-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-spreadsheet" viewBox="0 0 16 16">
                                        <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm2-1a1 1 0 0 0-1 1v4h10V2a1 1 0 0 0-1-1H4zm9 6h-3v2h3V7zm0 3h-3v2h3v-2zm0 3h-3v2h2a1 1 0 0 0 1-1v-1zm-4 2v-2H6v2h3zm-4 0v-2H3v1a1 1 0 0 0 1 1h1zm-2-3h2v-2H3v2zm0-3h2V7H3v2zm3-2v2h3V7H6zm3 3H6v2h3v-2z" />
                                    </svg>
                                </div>
                                <div class="col-sm-9">
                                    <h5>@Html.DisplayFor(modelItem => item.Nombre)</h5>
                                </div>
                            </div>

                        </div>
                        @*<img src="~/images/programaarmadillo.jpg" class="card-img-top" alt="Programa">*@
                        <div class="card-body">
                            
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Descripcion)</p>
                            <a href="@Url.ActionLink("Index","Hojas",new{idPrograma=item.Id})" class="btn btn-primary">
                                
                                Abrir
                             </a>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</div>
