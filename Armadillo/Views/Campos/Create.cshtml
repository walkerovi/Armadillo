@model Armadillo.Models.Campo

@{
    ViewData["Title"] = "Nuevo campo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Nuevo campo para la Hoja: <b>@ViewBag.Hoja.Nombre</b> de Programa: <b>@ViewBag.Hoja.Programa.Nombre</b>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="IdHoja" id="IdHoja" value="@ViewBag.Hoja.Id" >
                    <div class="form-group">
                        <label asp-for="Indice" class="control-label">Índice</label>
                        <input asp-for="Indice" class="form-control" />
                        <span asp-validation-for="Indice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdTipo" class="control-label">Tipo de dato</label>
                        <select asp-for="IdTipo" class="form-control" asp-items="ViewBag.IdTipo"></select>
                    </div>

                    <div class="form-group" id="HojaLista">
                        <label for="IdHoja" class="control-label">Hoja como Lista</label>
                        <select id="IdHoja" class="form-control" asp-items="ViewBag.IdHoja"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Calculo" class="control-label">Cálculo</label>
                        <input asp-for="Calculo" class="form-control" />
                        <span asp-validation-for="Calculo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <p></p>
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {
            $('#HojaLista').hide();
            $('#IdHoja').change(function () {
                var selectVal = $("#IdHoja option:selected").val();
                if (selectVal == "6") {
                    $('#HojaLista').show();
                } else {
                    $('#HojaLista').hide();
                }
            });
        });
    </script>

}
